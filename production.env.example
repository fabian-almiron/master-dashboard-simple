# =============================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================
# Copy this to .env.production.local for production deployment

# =============================================
# CLERK AUTHENTICATION (PRODUCTION)
# =============================================
# CRITICAL: Use LIVE keys for production
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_live_secret_key_here

# Production URLs (update with your domain)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/master

# =============================================
# SECURITY CONFIGURATION (PRODUCTION)
# =============================================
# Admin emails (comma-separated) - UPDATE WITH REAL EMAILS
ADMIN_EMAILS=admin@yourdomain.com,owner@yourdomain.com

# CRITICAL: NEVER set BYPASS_AUTH to true in production
BYPASS_AUTH=false

# Production environment
NODE_ENV=production

# =============================================
# MASTER DASHBOARD DATABASE (PRODUCTION)
# =============================================
# Use production Supabase project
NEXT_PUBLIC_MASTER_SUPABASE_URL=https://your-production-master.supabase.co
NEXT_PUBLIC_MASTER_SUPABASE_ANON_KEY=your_production_master_anon_key_here
MASTER_SUPABASE_SERVICE_ROLE_KEY=your_production_master_service_key_here

# =============================================
# VERCEL API (PRODUCTION)
# =============================================
VERCEL_TOKEN=your_production_vercel_token_here
VERCEL_TEAM_ID=your_team_id_if_using_team

# =============================================
# BITBUCKET API (PRODUCTION)
# =============================================
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_API_TOKEN=your_production_api_token_here
BITBUCKET_WORKSPACE=your_workspace
BITBUCKET_MASTER_REPO=cms-master

# =============================================
# DEPLOYMENT SETTINGS (PRODUCTION)
# =============================================
DEFAULT_CMS_REPO=https://bitbucket.org/your_workspace/cms-master.git
DEFAULT_CMS_BRANCH=main
DEFAULT_VERCEL_REGION=iad1

# =============================================
# PRODUCTION DOMAIN
# =============================================
NEXT_PUBLIC_MASTER_DASHBOARD_URL=https://yourdomain.com

# =============================================
# SECURITY HEADERS (PRODUCTION)
# =============================================
# These are automatically applied via next.config.mjs
# No additional configuration needed